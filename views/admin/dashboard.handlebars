<div class="container mt-4">
    <h1 class="mb-4">Painel Administrativo</h1>

    <div class="card mb-4">
        <div class="card-body">
            <h2 class="card-title">Cadastrar Farmácia de Plantão</h2>
            <form action="/admin/eventos/create" method="POST">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="nome" class="form-label">Nome da Farmácia</label>
                        <input type="text" class="form-control" id="nome" name="nome" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="telefone" class="form-label">Telefone</label>
                        <input type="text" class="form-control" id="telefone" name="telefone" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="endereco" class="form-label">Endereço Completo</label>
                    <input type="text" class="form-control" id="endereco" name="endereco" required>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="dataInicio" class="form-label">Data Início</label>
                        <input type="date" class="form-control" id="dataInicio" name="dataInicio" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="dataFim" class="form-label">Data Fim</label>
                        <input type="date" class="form-control" id="dataFim" name="dataFim" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Cadastrar</button>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Farmácias Cadastradas</h2>
            {{#if eventos}}
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Endereço</th>
                                <th>Telefone</th>
                                <th>Período</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each eventos}}
                                <tr>
                                    <td>{{this.nome}}</td>
                                    <td>{{this.endereco}}</td>
                                    <td>{{this.telefone}}</td>
                                    <td>{{formatDate this.dataInicio}} até {{formatDate this.dataFim}}</td>
                                    <td>
                                        <form action="/admin/eventos/delete" method="POST" style="display: inline;">
                                            <input type="hidden" name="id" value="{{this.id}}">
                                            <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                                        </form>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            {{else}}
                <p>Nenhuma farmácia cadastrada.</p>
            {{/if}}
        </div>
    </div>
</div>