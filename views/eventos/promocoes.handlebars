    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const imageExtensions = {
            'desco': { 1: 'jpg', 2: 'jpg', 3: 'jpeg' },
            'brasil-lopes': { 1: 'jpg', 2: 'jpg', 3: 'jpg' },
            'pompeia': { 1: 'jpeg', 2: 'jpg', 3: 'jpg' },
            'papacardo': { 1: 'jpg', 2: 'jpeg', 3: 'jpg' }
        };

        function openModal(imgSrc) {
            const modal = new bootstrap.Modal(document.getElementById('imageModal'));
            document.getElementById('modalImage').src = imgSrc;
            modal.show();
        }

        // Adiciona evento de clique nas imagens dentro dos carrosséis para abrir o modal
        document.querySelectorAll('.promocao-img').forEach(img => {
            img.addEventListener('click', function() {
                openModal(this.src);
            });

            // Tratamento de erro de carregamento de imagem
            img.onerror = function() {
                this.classList.add('error');
                this.src = '/img/default-promotion.png'; // Imagem padrão para erro
                console.error(`Erro ao carregar imagem: ${this.src}`);
            };
        });

        // Função de busca
        document.getElementById('searchPromotions').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const storeSections = document.querySelectorAll('.store-section');
            
            storeSections.forEach(section => {
                const storeName = section.querySelector('.store-title').textContent.toLowerCase();
                const storeData = section.getAttribute('data-store');
                
                if (storeName.includes(searchTerm) || storeData.includes(searchTerm)) {
                    section.style.display = 'block';
                } else {
                    section.style.display = 'none';
                }
            });
        });

        // Função para compartilhar promoções
        function sharePromotion(store) {
            const storeName = document.querySelector(`[data-store="${store}"] .store-title`).textContent;
            const shareText = `Confira as promoções especiais do ${storeName} no Guia de Serviços!`;
            const shareUrl = window.location.href;
            
            // Compartilhar no Facebook
            if (navigator.share) {
                navigator.share({
                    title: 'Promoções Especiais',
                    text: shareText,
                    url: shareUrl
                }).catch(console.error);
            } else {
                // Fallback para copiar link
                navigator.clipboard.writeText(shareUrl).then(() => {
                    alert('Link copiado para a área de transferência!');
                }).catch(console.error);
            }
        }

        // Atualiza a imagem do carrossel ao mudar de slide
        document.querySelectorAll('.promotions-carousel').forEach(carouselEl => {
            carouselEl.addEventListener('slide.bs.carousel', function(event) {
                const activeIndex = event.to;
                const carouselId = this.id;
                const store = carouselId.replace('carousel', '').toLowerCase();
                
                const imgElement = this.querySelector(`.carousel-item:nth-child(${activeIndex + 1}) .promocao-img`);
                if (imgElement && imageExtensions[store]) {
                    const originalIndex = parseInt(imgElement.dataset.index);
                    const extension = imageExtensions[store][originalIndex];
                    imgElement.src = `/img/promocoes/${store}${originalIndex}.${extension}`;
                }
            });
        });
    </script>
