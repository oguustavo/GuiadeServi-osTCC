                            <div class="btn btn-primary mt-auto">Clique para mais informações</div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col">
                <a href="/eventos/eventosCidade" class="card-link">
                    <div class="card h-100">
                        <img src="/img/eventos.png" class="card-img-top" alt="Eventos da Cidade">
                        <div class="card-body">
                            <h5 class="card-title">Eventos da Cidade</h5>
                            <p class="card-text">Lista eventos e atividades culturais da região.</p>
                            <div class="btn btn-primary mt-auto">Clique para mais informações</div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col">
                <a href="/eventos/contatos" class="card-link">
                    <div class="card h-100">
                        <img src="/img/contatos.png" class="card-img-top" alt="Contatos Úteis">
                        <div class="card-body">
                            <h5 class="card-title">Contatos Úteis</h5>
                            <p class="card-text">Fornece informações importantes como números de emergência.</p>
                            <div class="btn btn-primary mt-auto">Clique para mais informações</div>
                        </div>
                    </div>
                </a>
            </div>
            
        </div>
    </div>
    <script>
        function updateClock() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('pt-BR');
            const weekDayString = now.toLocaleDateString('pt-BR', { weekday: 'long' });
            
           
            const formattedWeekDay = weekDayString.charAt(0).toUpperCase() + weekDayString.slice(1);
            
            document.getElementById('time').textContent = timeString;
            document.getElementById('weekday').textContent = formattedWeekDay;
        }
        setInterval(updateClock, 1000);
        updateClock();

        async function getWeather() {
            const API_KEY = '8f57cb746c4c1d4b48b7f35eba6f6230';
            try {
                const response = await fetch(`https://api.openweathermap.org/data/2.5/weather?q=Vitoria Brasil,BR&units=metric&appid=${API_KEY}`);
                if (!response.ok) {
                    throw new Error('Erro na resposta da API');
                }
                const data = await response.json();
                if (data && data.main && typeof data.main.temp !== 'undefined') {
                    const temp = Math.round(data.main.temp);
                    document.getElementById('temp').textContent = `${temp}°C`;
                } else {
                    throw new Error('Dados de temperatura não encontrados');
                }
            } catch (error) {
                console.error('Erro ao obter dados do clima:', error);
                document.getElementById('temp').textContent = 'Temp. indisponível';
            }
        }

        getWeather();
        setInterval(getWeather, 300000);
    </script>
